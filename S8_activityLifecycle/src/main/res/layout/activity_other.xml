<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OtherActivity">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_other_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other activity"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            app:layout_constraintEnd_toEndOf="@id/tv_other_activity"
            app:layout_constraintStart_toStartOf="@id/tv_other_activity"
            app:layout_constraintTop_toBottomOf="@id/tv_other_activity" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>