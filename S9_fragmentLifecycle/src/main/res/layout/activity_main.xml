<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.hth96.s9_fragmentLifeCycle.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="com.hth96.s9_fragmentLifeCycle.Fragment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finish_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish Fragment 1"
            android:layout_margin="16dp"
            android:onClick="@{}"
            app:layout_constraintBottom_toTopOf="@id/btn_finish_fragment2"
            app:layout_constraintEnd_toEndOf="parent" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finish_fragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish Fragment 2"
            android:layout_margin="16dp"
            android:onClick="@{}"
            app:layout_constraintBottom_toTopOf="@id/btn_start_fragment1"
            app:layout_constraintEnd_toEndOf="parent" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Fragment 1"
            android:layout_margin="16dp"
            android:onClick="@{}"
            app:layout_constraintBottom_toTopOf="@id/btn_start_fragment2"
            app:layout_constraintEnd_toEndOf="parent" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_fragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Fragment 2"
            android:layout_margin="16dp"
            android:onClick="@{}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>